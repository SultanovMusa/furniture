---
import { Image } from 'astro:assets';
---

<section class="banner">
    <div class="swiper banner-slider">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="slide-content">
                    <h1>Furniture for Your Comfort</h1>
                    <p>We create unique interior items that make your home cozy and stylish.</p>
                    <a href="#catalog" class="btn">View Catalog</a>
                </div>
                <div class="slide-bg" style="background-image: url('https://images.unsplash.com/photo-1556228453-efd6c1ff04f6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80')"></div>
            </div>
            <div class="swiper-slide">
                <div class="slide-content">
                    <h1>Quality in Every Detail</h1>
                    <p>Our furniture is made from the finest materials and serves for many years.</p>
                    <a href="#works" class="btn">Our Works</a>
                </div>
                <div class="slide-bg" style="background-image: url('https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1632&q=80')"></div>
            </div>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</section>

<style>
    .banner {
        height: 100vh;
        min-height: 600px;
        margin-top: 80px;
    }

    .banner-slider, .swiper-wrapper, .swiper-slide {
        height: 100%;
    }

    .swiper-slide {
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
    }

    .slide-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        z-index: -1;
        filter: brightness(0.7);
    }

    .slide-content {
        max-width: 600px;
        padding: 0 20px;
        margin-left: 10%;
        color: white;
        z-index: 1;
    }

    .slide-content h1 {
        font-size: 48px;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .slide-content p {
        font-size: 18px;
        margin-bottom: 30px;
    }

    .swiper-button-prev, .swiper-button-next {
        color: white;
    }

    .swiper-pagination-bullet {
        background: white;
    }

    .swiper-pagination-bullet-active {
        background: var(--secondary-color);
    }

    @media (max-width: 768px) {
        .slide-content h1 {
            font-size: 32px;
        }

        .slide-content {
            margin-left: 5%;
        }
    }
</style>

<script>
    import Swiper from 'swiper';
    import { Navigation, Pagination, Autoplay } from 'swiper/modules';
    import 'swiper/css';
    import 'swiper/css/navigation';
    import 'swiper/css/pagination';

    document.addEventListener('DOMContentLoaded', () => {
        new Swiper('.banner-slider', {
            modules: [Navigation, Pagination, Autoplay],
            loop: true,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
        });
    });
</script>